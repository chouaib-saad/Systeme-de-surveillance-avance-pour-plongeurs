<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_marginHorizontal="30dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        android:textSize="16dp"
        android:textAlignment="center"
        android:padding="8dp"
        android:text="Nouveau mot de passe"/>

    <EditText
        android:id="@+id/current_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_edittext"
        android:inputType="textPassword"
        android:hint="Mot de passe actuel"
        android:layout_marginHorizontal="8dp"
        android:paddingHorizontal="16dp"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textColorHint="#ADAEB1"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/new_password_edittext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_edittext"
        android:inputType="textPassword"
        android:hint="Nouveau mot de passe"
        android:layout_marginHorizontal="8dp"
        android:paddingHorizontal="16dp"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textColorHint="#ADAEB1"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/confirm_password_edittext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:background="@drawable/custom_edittext"
        android:hint="Confirmer mot de passe"
        android:textColor="@color/grey"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="8dp"
        android:paddingHorizontal="16dp"
        android:textSize="14sp"
        android:textColorHint="#ADAEB1"
        android:layout_marginTop="16dp"
        android:autofillHints="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:weightSum="2.3"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:cornerRadius="20dp"
            android:text="Annuler"
            android:backgroundTint="@color/lavender"
            style="@style/CustomAppThemeRed"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Confirmer"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/lavender"
            style="@style/CustomAppThemeGreen"
            />

    </LinearLayout>

</LinearLayout>
